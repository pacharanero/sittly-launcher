{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sittly",
  "version": "0.0.0-alpha.14",
  "identifier": "com.jkominovic.sittly",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "label": "sittly",
        "title": "sittly",
        "width": 700,
        "height": 460,
        "decorations": false,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "y": 0,
        "center": true,
        "transparent": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": ["deb"]
  }
}
